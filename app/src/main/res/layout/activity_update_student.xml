<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    android:background="#F49E1F"
    tools:context=".update_student">
    <TextView
        android:id="@+id/textView3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Update Student Info"
        android:textSize="35dp"
        android:textColor="@color/white"
        android:textStyle="bold"
        android:layout_marginTop="40dp"
         />
    <View
        android:id="@+id/view"
        android:layout_width="80dp"
        android:layout_height="5dp"
        android:background="@color/white"
        android:layout_marginTop="40dp"
        android:layout_marginBottom="10dp"
         />

    <LinearLayout
        android:id="@+id/relativeLayout2"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center"
        android:background="@drawable/loginbackground">


        <LinearLayout
            android:id="@+id/layout1"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="4"
            android:layout_alignParentTop="true"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="25dp"
            android:gravity="center"
            android:orientation="vertical"
            android:weightSum="4">

            <AutoCompleteTextView
                android:id="@+id/idid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Student id"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/nameid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Student name"
                android:inputType="textPersonName" />

            <EditText
                android:id="@+id/emailid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Email"
                android:inputType="textEmailAddress" />

            <EditText
                android:id="@+id/phoneid"
                android:layout_width="wrap_content"
                android:layout_height="0dp"
                android:layout_marginTop="10dp"
                android:layout_weight="1"
                android:ems="10"
                android:hint="Phone"
                android:inputType="phone" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_above="@+id/layout3"
            android:layout_marginBottom="21dp"
            android:layout_weight="1"
            android:gravity="center">

            <TextView
                android:id="@+id/textView4"
                android:layout_width="81dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:text="Gender"
                android:textSize="18dp" />

            <RadioGroup
                android:id="@+id/radiogroupid"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:gravity="center">

                <RadioButton
                    android:id="@+id/maleid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:checked="true"
                    android:text="Male"></RadioButton>

                <RadioButton
                    android:id="@+id/femaleid"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Female"></RadioButton>


            </RadioGroup>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/layout3"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.8"
            android:layout_above="@+id/layout4"
            android:layout_marginBottom="15dp"
            android:gravity="center">

            <TextView
                android:id="@+id/textView6"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="28dp"
                android:text="Department"
                android:textSize="18dp" />

            <Spinner
                android:id="@+id/spinerid"
                android:layout_width="87dp"
                android:layout_height="wrap_content"></Spinner>

        </LinearLayout>
        <LinearLayout
            android:id="@+id/layout4"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:layout_alignParentBottom="true"

            android:gravity="center">
            <Button
                android:id="@+id/button4"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:layout_marginRight="20dp"
                android:background="@drawable/btnshape2"
                android:onClick="update"
                android:text="Update"
                android:textColor="@color/white" />

            <Button
                android:id="@+id/button5"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnshape4"
                android:onClick="show"
                android:text="Show"
                android:textColor="@color/white" />
            <Button
                android:id="@+id/button3"
                android:layout_width="90dp"
                android:layout_height="wrap_content"
                android:background="@drawable/btnshape3"
                android:layout_marginLeft="20dp"
                android:onClick="Cancel"
                android:text="Cancel"
                android:textColor="@color/white" />

        </LinearLayout>




        <ProgressBar
            android:id="@+id/progressbarid"
            android:layout_width="220dp"
            android:layout_height="238dp"
            android:layout_marginStart="96dp"
            android:layout_marginLeft="96dp"
            android:layout_marginTop="58dp"
            android:layout_marginEnd="96dp"
            android:layout_marginRight="96dp"
            android:layout_marginBottom="216dp"
            android:visibility="gone" />


</LinearLayout>


</LinearLayout>